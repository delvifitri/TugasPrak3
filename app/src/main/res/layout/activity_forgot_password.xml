<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ForgotPasswordActivity">
	<ImageView
		android:id="@+id/imgBack"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:src="@drawable/ic_baseline_keyboard_backspace_24"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="16dp"/>
	<TextView
		android:id="@+id/tvforgot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Forgot Password"
		app:layout_constraintTop_toBottomOf="@id/imgBack"
		android:layout_marginTop="32dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="18dp"
		android:fontFamily="@font/montserrat_semi_bold"
		android:textSize="35dp"/>
	<TextView
		android:id="@+id/tvinstruction"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Please enter your email below to receive your password reset instructions"
		app:layout_constraintTop_toBottomOf="@id/tvforgot"
		app:layout_constraintStart_toStartOf="@id/tvforgot"
		android:fontFamily="@font/montserrat_light"
		android:textSize="16dp"
		android:layout_marginTop="10dp"/>
	<TextView
		android:id="@+id/tvusername"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Username"
		app:layout_constraintTop_toBottomOf="@id/tvinstruction"
		app:layout_constraintStart_toStartOf="@id/tvinstruction"
		android:fontFamily="@font/montserrat_semi_bold"
		android:textSize="18dp"
		android:layout_marginTop="52dp"/>
	<EditText
		android:id="@+id/etusername"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/tvusername"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginHorizontal="18dp"
		android:hint="delvicantik@gmail.com"/>
	<android.widget.Button
		android:id="@+id/btn_request"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/button_red"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginHorizontal="18dp"
		app:layout_constraintTop_toBottomOf="@id/etusername"
		android:text="Send Request"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:fontFamily="sans-serif-light"
		android:textSize="16dp"
		android:layout_marginTop="32dp"
		/>


</androidx.constraintlayout.widget.ConstraintLayout>