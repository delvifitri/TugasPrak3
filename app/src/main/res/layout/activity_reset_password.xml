<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ResetPasswordActivity">
	<ImageView
		android:id="@+id/imgBack"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:src="@drawable/ic_baseline_keyboard_backspace_24"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="16dp"/>
	<TextView
		android:id="@+id/tvreset"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Reset Password"
		app:layout_constraintTop_toBottomOf="@id/imgBack"
		android:layout_marginTop="32dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="18dp"
		android:fontFamily="@font/montserrat_semi_bold"
		android:textSize="35dp"/>
	<TextView
		android:id="@+id/tvinstruction"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Reset code was sent to your email. PLease enter the code and create new password"
		app:layout_constraintTop_toBottomOf="@id/tvreset"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginHorizontal="18dp"
		android:fontFamily="@font/montserrat_light"
		android:textSize="16dp"
		android:layout_marginTop="10dp"/>
	<TextView
		android:id="@+id/tvresetcode"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Reset code"
		app:layout_constraintTop_toBottomOf="@id/tvinstruction"
		app:layout_constraintStart_toStartOf="@id/tvinstruction"
		android:fontFamily="@font/montserrat_semi_bold"
		android:textSize="18dp"
		android:layout_marginTop="52dp"/>
	<EditText
		android:id="@+id/etresetcode"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/tvresetcode"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginHorizontal="18dp"
		android:inputType="number"
		android:hint="Enter your number"/>
	<TextView
		android:id="@+id/tvnewpass"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="New password"
		android:fontFamily="@font/montserrat_semi_bold"
		android:textSize="18dp"
		app:layout_constraintTop_toBottomOf="@id/etresetcode"
		app:layout_constraintStart_toStartOf="@id/tvresetcode"
		android:layout_marginTop="24dp"/>
	<EditText
		android:id="@+id/etnewpass"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="18dp"
		android:hint="Enter your password"
		android:inputType="textPassword"
		app:layout_constraintTop_toBottomOf="@id/tvnewpass"
		/>
	<TextView
		android:id="@+id/tvconfirmpass"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Confirm password"
		android:fontFamily="@font/montserrat_semi_bold"
		android:textSize="18dp"
		app:layout_constraintTop_toBottomOf="@id/etnewpass"
		app:layout_constraintStart_toStartOf="@id/etnewpass"
		android:layout_marginTop="24dp"/>
	<EditText
		android:id="@+id/etconfirmpass"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="18dp"
		android:hint="Enter your confirm password"
		app:layout_constraintTop_toBottomOf="@id/tvconfirmpass"
		android:inputType="textPassword"/>
	<android.widget.Button
		android:id="@+id/btn_change"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/button_red"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginHorizontal="18dp"
		app:layout_constraintTop_toBottomOf="@id/etconfirmpass"
		android:text="Change password"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:fontFamily="sans-serif-light"
		android:textSize="16dp"
		android:layout_marginTop="48dp"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>